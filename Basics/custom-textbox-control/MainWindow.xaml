<Window x:Class="custom_textbox_control.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:custom_textbox_control"
        xmlns:userControls="clr-namespace:custom_textbox_control.View.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <userControls:CustomTextBox Grid.Row="1" Width="250" Height="40" Placeholder="first name"/>
        <userControls:CustomTextBox Grid.Row="2" Width="250" Height="40" Placeholder="last name"/>
        <userControls:CustomTextBox Grid.Row="3" Width="250" Height="40" Placeholder="email"/>
        <userControls:CustomTextBox Grid.Row="4" Width="250" Height="40" Placeholder="address"/>
    </Grid>
</Window>
